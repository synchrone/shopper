{
  "name": "shopper",
  "version": "0.3.7",
  "description": "Shopper",
  "main": "index.js",
  "scripts": {
    "start": "npm run eslint && npm run build",
    "sign": "cd dist; for b in $(find . -maxdepth 1 -mindepth 1 -type d); do chromium --pack-extension-key=signing-key.pem --pack-extension=dist/$b; done",
    "pack": "cd dist; for b in $(find . -maxdepth 1 -mindepth 1 -type d); do cd $b; zip -r ../$b.zip .; cd -; done",
    "build": "npm run build-chrome && npm run build-firefox && npm run build-edge && npm run build-safari",
    "build-chrome": "cross-env KW_BROWSER=chrome webpack --mode=production",
    "build-firefox": "cross-env KW_BROWSER=firefox webpack --mode=production",
    "build-edge": "cross-env KW_BROWSER=edge webpack --mode=production",
    "build-safari": "cross-env KW_BROWSER=safari webpack --mode=production",
    "watch-chrome": "cross-env KW_BROWSER=chrome webpack --mode=development --watch",
    "watch-firefox": "cross-env KW_BROWSER=firefox webpack --mode=development --watch",
    "watch-edge": "cross-env KW_BROWSER=edge webpack --mode=development --watch",
    "watch-safari": "cross-env KW_BROWSER=safari webpack --mode=development --watch",
    "eslint": "eslint webpack.config.ts src scripts",
    "prettier": "prettier --write src/**/*.ts src/**/*.tsx *.js pages/*.html styles/*.css",
    "download-translations": "ts-node scripts/download-translations",
    "bump-version": "ts-node scripts/bump-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/synchrone/shopper.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/synchrone/shopper/issues"
  },
  "homepage": "https://github.com/synchrone/shopper#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.134",
    "@types/copy-webpack-plugin": "^8.0.0",
    "@types/node": "^15.0.1",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "copy-webpack-plugin": "^8.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "merge": "^2.1.1",
    "prettier": "^2.2.1",
    "tiny-typed-emitter": "^2.0.3",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "preact": "^10.5.13",
    "tweetnacl": "^1.0.3"
  }
}
