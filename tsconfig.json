{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": "src",
    "noEmitOnError": true
  },
  "paths": {
    "background/*": ["background/*"],
    "common/*": ["common/*"],
    "content/*": ["content/*"],
    "options/*": ["options/*"]
  },
  "include": ["src/**/*", "scripts/**/*", "webpack.config.ts"]
}
